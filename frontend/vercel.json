{
  "framework": "nextjs",
  "outputDirectory": ".next",
  "headers": [
    {
      "source": "/agent-metadata-v2.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=60" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scan",
      "schedule": "0 8 * * *"
    }
  ],
  "functions": {
    "src/app/api/agent/analyze/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/scan/route.ts": {
      "maxDuration": 60
    }
  }
}
